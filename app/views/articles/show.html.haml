- @title = @article.title

.twelve.columns
  %h1 Displaying a particular article...

- if has_access_to? :articles
  .twelve.columns
    .medium.info.btn
      = link_to 'Edit', edit_article_path(@article.id)
    .medium.danger.btn
      = link_to 'Delete', delete_article_path(@article.id), method: :delete

= show_notice

.twelve.columns
  .article
    %h2= @article.title
    %p=  @article.content
    %span.warning.label= @article.created_at.strftime 'Article was created on %m/%d/%Y'
