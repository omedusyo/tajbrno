- @title = 'Dishes'

.twelve.columns
  %h1 Dishes

.twelve.columns
  .medium.info.btn.rounded
    = link_to 'Create new dish', action: :new

- if flash[:notice].present?
  .four.columns
    .success.label= flash[:notice]

.twelve.columns
  %ul.two_up.tiles
    - @dishes.each do |dish|
      %li
        %h2= link_to dish.name, action: :show, id: dish.id
        %p= dish.description
        %h3.price= "#{dish.price} $"
      %li.image.photo= image_tag dish.image_url(:thumb).to_s
