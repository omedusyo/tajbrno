- @title = 'Login'

.twelve.columns
  %h1 Login

- if flash[:alert].present?
  .twelve.columns
    .danger.alert= flash[:alert]

= show_notice

.twelve.columns.more_height#login
  = form_for @user, url: { action: :attempt_login } do |f|
    .field= f.text_field :username, placeholder: 'Username', class: 'input'
    .field= f.password_field :password, placeholder: 'Password', class: 'input'
    .large.info.btn= submit_tag 'Login'

